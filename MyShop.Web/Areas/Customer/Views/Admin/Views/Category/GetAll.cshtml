@{
    ViewData["PageDescreption"] = "View Categories";
    ViewData["PageTitle"] = "Category";
    Layout = "_DashBoard";
}
@model List<Category>
<div class="container mt-5">
    
    <a asp-action="CreateCategory" asp-controller="Category"  class="btn btn-primary btn-sm">Add Category</a>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                     <td>@item.CreatedDate</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id"  asp-asp-route-id ="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" asp-asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .container {
        max-width: 800px;
    }

    h2 {
        color: #007bff;
        margin-bottom: 20px;
    }

    .table {
        margin-top: 20px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }
</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}