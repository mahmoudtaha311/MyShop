@model ShoppingCart;

<form method="post" asp-action="Details" asp-controller="Home" asp-area="customer">
    <section class="py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <input asp-for="ProductId" hidden />

                <!-- Image Section with larger column -->
                <div class="col-lg-7 mb-4">
                    <img class="img-fluid rounded shadow-lg" src="~/@Model.Product.Img" alt="@Model.Product.Name" style="object-fit: contain; max-height: 600px; max-width: 100%; width: 100%; height: auto;">
                </div>

                <!-- Product Details Section with smaller column -->
                <div class="col-lg-5">
                    <!-- Category -->
                    <div class="small text-uppercase mb-2">
                        <strong style="color: #007bff; font-size: 1.5rem;">@Model.Product.Category.Name</strong>
                    </div>

                    <!-- Product Name -->
                    <h1 class="display-5 fw-bolder mb-3">
                        @Model.Product.Name
                    </h1>

                    <!-- Price -->
                    <div class="fs-4 mb-4">
                        <span class="text-primary">@Model.Product.Price $</span>
                    </div>

                    <!-- Description -->
                    <p class="lead mb-4">
                        @Html.Raw(Model.Product.Description)
                    </p>

                    <!-- Quantity and Add to Cart Button -->
                    <div class="d-flex align-items-center mb-3">
                        <!-- Quantity Input -->
                        <input class="form-control text-center me-3" id="inputQuantity" asp-for="Count" style="max-width: 4rem; height: 3rem;">

                        <!-- Add to Cart Button -->
                        <button class="btn btn-primary btn-lg" type="submit">
                            <i class="bi-cart-fill me-1"></i>
                            Add to Cart
                        </button>
                    </div>
                </div>
            </div>

            <!-- Additional Information or Buttons (Moved here) -->
            <div class="text-center mt-4">
                <button class="btn btn-success btn-lg" type="button" onclick="window.history.back();">
                    <i class="bi-arrow-left me-1"></i>
                    Back to Products
                </button>
            </div>
        </div>
    </section>
</form>

<style>
    .container {
        max-width: 1200px; /* أقصى عرض للحاوية */
    }

    img {
        border-radius: 0.5rem; /* تقليل الزوايا */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* إضافة ظل للصورة */
    }

    h1.display-5 {
        font-size: 2.5rem; /* حجم العنوان */
        color: #333; /* لون العنوان */
    }

    .lead {
        font-size: 1.2rem; /* حجم الخط للوصف */
        color: #555; /* لون وصف المنتج */
    }

    .btn-primary {
        background-color: #007bff; /* لون الزر */
        border: none; /* إزالة الحدود */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* لون الزر عند التمرير */
        }

    .btn-success {
        background-color: #28a745; /* لون زر العودة */
        border: none; /* إزالة الحدود */
    }

        .btn-success:hover {
            background-color: #218838; /* لون زر العودة عند التمرير */
            color: #fff; /* لون النص */
        }
</style>
