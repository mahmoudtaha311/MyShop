@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-5">
    <div class="row">
        <!-- الفورم على اليسار -->
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h1 class="text-center">@ViewData["Title"]</h1>
                <form id="account" method="post" class="mt-4">
                    <h4 class="text-center mb-3">Use a local account to log in</h4>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                    </div>

                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>

                    <div class="mt-3 text-center">
                        <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                       
                    </div>
                </form>
            </div>
        </div>

        <!-- الصورة على اليمين -->
        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <img src="~/img/login.jpg" class="img-fluid rounded shadow" alt="Login Image" style="max-width: 100%; height: 100%;" />
        </div>
    </div>

    <!-- External logins section -->
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
