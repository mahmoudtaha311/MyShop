@{
    ViewData["PageDescreption"] = "View Categories";
    ViewData["PageTitle"] = "Category Management";
    Layout = "_DashBoard";
}
@model List<Category>

<div class="container mt-5">

    <div class="mb-3 text-right">
        <a asp-action="CreateCategory" asp-controller="Category" asp-area="admin" class="btn btn-primary btn-sm">Add Category</a>
    </div>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@Html.Raw(item.Description)</td>
                    <td>
                        @if (item.CreatedDate.HasValue)
                        {
                            @item.CreatedDate.Value.ToString("dd/MM/yyyy")
                        }
                        else
                        {
                            <span>N/A</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .container {
        max-width: 800px;
    }

    h2 {
        color: #007bff;
        margin-bottom: 20px;
    }

    .table {
        margin-top: 20px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    th {
        text-align: center;
    }

    td {
        vertical-align: middle;
        text-align: center;
    }

    .btn-group {
        display: flex; /* Use flexbox to align buttons */
        justify-content: center; /* Center the buttons */
    }

        .btn-group .btn {
            margin: 0 5px; /* Space between buttons */
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
