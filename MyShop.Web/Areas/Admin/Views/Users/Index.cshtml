@model IEnumerable<ApplicationUser>

    @{
    ViewData["PageDescreption"] = "View Users";
    ViewData["PageTitle"] = "Users Mangement";
    Layout = "_DashBoard";
}

<div class="container mt-5">
    
    <a asp-action="Register" asp-controller="Account" asp-area ="Identity"  class="btn btn-primary btn-sm">Create New User</a>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th> City</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.City</td>
                    <td>

                        @if (item.LockoutEnd == null | item.LockoutEnd < DateTime.Now)
                        {
                            <a asp-action="LockUnlock"  asp-route-id = "@item.Id" class="btn btn-success">
                                <i class="fas fa-lock-open"></i> 
                            </a>

                        }
                        else
                        {
                            <a asp-action="LockUnlock" asp-route-id="@item.Id" class="btn btn-danger">
                                <i class="fas fa-lock"></i> 
                            </a>

                        }


                      

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .container {
        max-width: 800px;
    }

    h2 {
        color: #007bff;
        margin-bottom: 20px;
    }

    .table {
        margin-top: 20px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }
</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}