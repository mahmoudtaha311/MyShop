@{
    ViewData["PageDescreption"] = "View Products";
    ViewData["PageTitle"] = "Product Management";
}
<div class="container mt-5">
   
    <a asp-action="CreateProduct" asp-controller="Product" class="btn btn-primary btn-sm mb-3">Add Product</a>

    <table class="table table-striped table-bordered" id="mytable">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Populate rows here -->
        </tbody>
    </table>
</div>

<style>
    .container {
        max-width: 1400px;
    }

    h2 {
        color: #007bff;
        margin-bottom: 20px; /* Space below the title */
    }

    .table {
        margin-top: 20px; /* Space above the table */
    }

        .table th, .table td {
            vertical-align: middle; /* Center content vertically in cells */
            padding: 8px 12px; /* Adjust padding to reduce row height */
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }
</style>

@section Scripts
{
    <script src="~/js/product.js"></script>
}
